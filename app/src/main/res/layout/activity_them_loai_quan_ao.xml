<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThemLoaiQuanAoActivity">

    <EditText
        android:id="@+id/edMaLoaiQuanAo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã loại quần áo" />

    <EditText
        android:id="@+id/edTenLoaiQuanAo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên loại quần áo" />

    <EditText
        android:id="@+id/edHangQuanAo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hãng quần áo" />

    <EditText
        android:id="@+id/edMoTa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThemLoaiQuanAo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="themLoaiQuanAo"
            android:text="Thêm" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cancel"
            android:text="Hủy" />

    </LinearLayout>

    <Button
        android:id="@+id/btnShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showLoaiQuanAo"
        android:text="Show" />
</LinearLayout>